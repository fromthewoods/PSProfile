// Place your key bindings in this file to overwrite the defaults
[
    { "key": "shift+f8",      "command": "workbench.action.terminal.runSelectedText",
                                 "when": "editorFocus && editorLangId == 'powershell'" },
    
    { "key": "ctrl+shift+f8", "command": "workbench.action.terminal.runActiveFile",
                                 "when": "editorFocus && editorLangId == 'powershell'" },
    
    { "key": "ctrl+shift+f8", "command": "workbench.action.terminal.runActiveFile",
                                 "when": "terminalFocus && editorLangId == 'powershell'" },
                                 
    { "key": "ctrl+shift+f1", "command": "extension.partialDiff.markSection1",
                                 "when": "editorTextFocus" },
    
    { "key": "ctrl+shift+f2", "command": "extension.partialDiff.markSection2AndTakeDiff",
                                 "when": "editorTextFocus" },
                
    { "key": "ctrl+shift+t",  "command": "workbench.action.terminal.focus",
                                "when": "editorTextFocus"
                            },
                            {
                                "key": "ctrl+k ctrl+alt+f",
                                "command": "editor.action.formatSelection",
                                "when": "editorHasDocumentSelectionFormattingProvider && editorHasSelection && editorTextFocus && !editorReadonly"
                            },
                            {
                                "key": "ctrl+k ctrl+f",
                                "command": "-editor.action.formatSelection",
                                "when": "editorHasDocumentSelectionFormattingProvider && editorHasSelection && editorTextFocus && !editorReadonly"
                            }
                        ]